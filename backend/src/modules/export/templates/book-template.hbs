<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Georgia', serif;
      font-size: 14px;
      line-height: 1.6;
      color: #333;
      background: #fff;
    }

    .page {
      width: 8.5in;
      min-height: 11in;
      padding: 1in;
      page-break-after: always;
    }

    .cover {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      min-height: 9in;
    }

    .cover h1 {
      font-size: 36px;
      margin-bottom: 20px;
      color: #2c3e50;
    }

    .cover .subtitle {
      font-size: 18px;
      color: #7f8c8d;
      margin-bottom: 40px;
    }

    .cover .date {
      font-size: 14px;
      color: #95a5a6;
    }

    .toc {
      padding-top: 2in;
    }

    .toc h2 {
      font-size: 24px;
      margin-bottom: 30px;
      text-align: center;
      color: #2c3e50;
    }

    .toc-item {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px dotted #ddd;
    }

    .entry-section {
      margin-bottom: 40px;
    }

    .entry {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
    }

    .entry:last-child {
      border-bottom: none;
    }

    .entry-header {
      margin-bottom: 15px;
    }

    .entry-prompt {
      font-style: italic;
      color: #7f8c8d;
      margin-bottom: 10px;
      font-size: 13px;
    }

    .entry-meta {
      font-size: 12px;
      color: #95a5a6;
    }

    .entry-author {
      font-weight: bold;
      color: #2c3e50;
    }

    .entry-content {
      font-size: 15px;
      line-height: 1.8;
      white-space: pre-wrap;
    }

    .entry-media {
      margin-top: 15px;
    }

    .entry-media img {
      max-width: 100%;
      max-height: 400px;
      border-radius: 8px;
    }

    .watermark {
      position: fixed;
      bottom: 0.5in;
      right: 0.5in;
      font-size: 10px;
      color: #bdc3c7;
      opacity: 0.7;
    }

    .footer {
      position: fixed;
      bottom: 0.5in;
      left: 50%;
      transform: translateX(-50%);
      font-size: 10px;
      color: #bdc3c7;
    }

    @media print {
      .page {
        page-break-after: always;
      }
    }
  </style>
</head>
<body>
  <!-- Cover Page -->
  <div class="page cover">
    <h1>{{journal.title}}</h1>
    {{#if journal.description}}
    <p class="subtitle">{{journal.description}}</p>
    {{/if}}
    <p class="date">Created {{formatDate journal.created_at}}</p>
  </div>

  {{#if showTableOfContents}}
  <!-- Table of Contents -->
  <div class="page toc">
    <h2>Table of Contents</h2>
    {{#each participants}}
    <div class="toc-item">
      <span>{{name}}</span>
      <span>{{entryCount}} memories</span>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Entries -->
  <div class="page">
    {{#each entries}}
    <div class="entry">
      <div class="entry-header">
        {{#if promptText}}
        <p class="entry-prompt">"{{promptText}}"</p>
        {{/if}}
        <p class="entry-meta">
          <span class="entry-author">{{participantName}}</span>
          &mdash; {{formatDate created_at}}
        </p>
      </div>
      <div class="entry-content">{{content}}</div>
      {{#if media_attachments}}
      <div class="entry-media">
        {{#each media_attachments}}
        <img src="{{url}}" alt="Photo" />
        {{/each}}
      </div>
      {{/if}}
    </div>
    {{/each}}
  </div>

  {{#if showWatermark}}
  <div class="watermark">Made with Keepswell</div>
  {{/if}}
</body>
</html>
